@model PartyPlannerV2.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this event?</h3>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Event Details</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-2">InfoText:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.InfoText)</dd>

                <dt class="col-sm-2">Category:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-2">Location:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>

                <dt class="col-sm-2">Date and Time:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.DateTime)</dd>

                <dt class="col-sm-2">Costs:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Costs)</dd>

                <dt class="col-sm-2">Max Participants:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Maxparticipants)</dd>
            </dl>

            <form asp-action="Delete" class="needs-validation" novalidate>
                <input type="hidden" asp-for="EventId" />
                <div class="mb-3">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}