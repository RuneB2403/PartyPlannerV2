@model PartyPlannerV2.Models.Organizer

@{
    ViewData["Title"] = "Organizer Details";
}

<div class="container mt-5">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Organizer Details</h4>
            <hr />

            <div class="mb-3">
                <h4>Organizer</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">Name:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                </dl>
            </div>

            <div class="mb-3">
                <a asp-action="Edit" asp-route-id="@Model?.OrganizerId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

