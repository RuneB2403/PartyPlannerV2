@model PartyPlannerV2.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Delete Order</h1>

<div class="card">
    <div class="card-body">
        <div class="alert alert-danger">
            <h3>Are you sure you want to delete this order?</h3>
        </div>
        <hr />

        <h5 class="card-subtitle mb-2 text-muted">Order Details</h5>

        <dl class="row">
            <dt class="col-sm-2">Date and Time</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DateTime)</dd>
            <dt class="col-sm-2">Event ID</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.EventId)</dd>
            <dt class="col-sm-2">Paid</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Payed)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="OrderId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </form>
    </div>
</div>